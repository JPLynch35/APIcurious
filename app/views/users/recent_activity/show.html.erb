<h1><%= current_user.name %>'s Recent Activity</h1>

<% @actions.activities.each do |activity| %>
  <ul class='activity'>
    <li>
      <p>Repo: <%= activity.project %></p>
      <p>Time: <%= activity.time %></p>
      <p>
        Commits:
        <ul class='commits'>
          <% activity.commits.each do |commit| %>
            <li><%= commit %></li>
          <% end %>
        </ul>
      </p>
    </li>
  </ul>
<% end %>

<%= link_to 'Back', user_path(current_user) %>
