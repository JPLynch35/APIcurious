<h1><%= current_user.name %>'s Recent Activity</h1>

<% @recent_activity.each do |activity| %>
  <ul class='activity'>
    <li>
      <p>Repo: <%= activity[0] %></p>
      <p>Time: <%= activity[1] %></p>
      <p>
        Commits:
        <ul class='commits'>
          <% activity[2].each do |commit| %>
            <li><%= commit %></li>
          <% end %>
        </ul>
      </p>
    </li>
  </ul>
<% end %>
